---
import Navigation from '../components/Navigation.astro';
import { SkipLinks } from 'accessible-astro-components';
import { Icon } from 'astro-icon/components';
---

<header transition:persist>
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item">
      <a href="/blog/">Blog</a>
    </li>
    <li class="menu-item">
      <a href="/colours/">Colours</a>
    </li>
    <li class="menu-item">
      <a href="/gallery/">Gallery</a>
    </li>
    <li class="menu-item">
      <a href="/contact/">Contact</a>
    </li>
    <li class="menu-item">
      <a href="https://github.com/david-abell" title="external link" rel="external noopener noreferrer">External Link</a
      >
    </li>
    <li class="menu-item type-icon">
      <a href="https://github.com/david-abell" title="Go to my github page">
        <Icon name="ion:logo-github" size={30} />
      </a>
    </li>
    <li class="menu-item type-icon">
      <a href="/admin/" title="Go to Sanity Studio">
        <Icon name="simple-icons:sanity" size={30} />
      </a>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [data-icon] {
        margin-top: -4px;

        path {
          fill: var(--action-color);
          transition: fill 0.2s ease-in-out;
        }
      }

      &:hover {
        [data-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
